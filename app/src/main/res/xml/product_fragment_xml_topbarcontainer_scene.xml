<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="200">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/searchBtn"
            motion:layout_constraintStart_toEndOf="@+id/posterTxt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="@+id/posterTxt"
            android:visibility="visible"
            android:layout_marginBottom="2dp"
            motion:layout_constraintTop_toTopOf="@+id/posterTxt"
            android:layout_marginTop="5dp" />
        <Constraint
            android:id="@+id/searchBtn"
            motion:layout_constraintStart_toEndOf="@+id/posterTxt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="@+id/posterTxt"
            android:visibility="visible"
            android:layout_marginBottom="2dp"
            motion:layout_constraintTop_toTopOf="@+id/posterTxt"
            android:layout_marginTop="5dp" />
        <Constraint
            android:id="@+id/findMoreBtn"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/searchBtn"
            android:layout_marginEnd="5dp"
            motion:layout_constraintTop_toTopOf="@+id/searchBtn" />
        <Constraint
            android:id="@+id/findMoreBtn"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/searchBtn"
            android:layout_marginEnd="5dp"
            motion:layout_constraintTop_toTopOf="@+id/searchBtn" />
        <Constraint
            android:id="@+id/titleTxt"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/posterTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/posterTxt"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="@+id/posterTxt" />
        <Constraint
            android:id="@+id/titleTxt"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/posterTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/posterTxt"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="@+id/posterTxt" />
    </ConstraintSet>
</MotionScene>